package net.findzen.utils{    public class NodeMap    {        protected var _map:Object;        public function NodeMap()        {            _map = {};        }        public function mapClass($class:Class, $node:String):NodeMap        {            _map[$node] = $class;            return this;        }        public function getClass($node:String):Class        {            return _map[$node];        }        public function destroy():void        {            var s:String;            for(s in _map)                delete _map[s];            _map = null;        }    }}