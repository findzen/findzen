package net.findzen.utils {	import flash.events.Event;	import flash.events.EventDispatcher;	import flash.net.*;		public class LoadXML extends EventDispatcher {		private var _loader:URLLoader;		private var _xml:XML;			public function LoadXML(path:String) {			_loader = new URLLoader();			_loader.addEventListener(Event.COMPLETE, loadComplete);			_loader.load(new URLRequest(path));		}						private function loadComplete(e:Event):void {			_xml = new XML(e.target.data);			dispatchEvent(e);			_loader.removeEventListener(Event.COMPLETE, loadComplete);		}				public function get returnData():XML {			return _xml;		}			}}